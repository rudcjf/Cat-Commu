<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
	<select id="list" resultType="Map" parameterType="Map" timeout="10">
		select BOARD_SEQ, BOARD_TITLE, BOARD_DATE, BOARD_VIEWS,
            BOARD_LIKE,  MEMBER_ID
            from cat_board
		where board_status = 'Y'
	</select>
	
	<select id="read" resultType="Map" parameterType="Map">
		select 
			*
        from  CIP_AUTHORITY_MEMBER 
         <where>
         	<if test = "MEMBER_SEQ != null">
         		and MEMBER_SEQ = #{MEMBER_SEQ}
         	</if>
         </where>
	</select>
</mapper>