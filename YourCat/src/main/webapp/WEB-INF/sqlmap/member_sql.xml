<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="authority">
	<select id="list" resultType="Map" parameterType="Map"
		timeout="10">
		select
			AUTHORITY_ID,
			NAME,
			DESCRIPTION,
			USE_YN,
			REGISTER_SEQ,
			REGISTRY_DATE,
			MODIFIER_SEQ,
			MODIFY_DATE
		from CIP_AUTHORITY
	</select>
	
	<select id="authorityList" resultType="Map" parameterType="Map">
		select 
			*
        from  CIP_AUTHORITY_MEMBER 
         <where>
         	<if test = "MEMBER_SEQ != null">
         		and MEMBER_SEQ = #{MEMBER_SEQ}
         	</if>
         </where>
	</select>
</mapper>